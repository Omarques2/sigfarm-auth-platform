{
  "name": "@sigfarm/auth-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "node --env-file=.env --watch --import tsx src/index.ts",
    "start": "node --env-file=.env --import tsx src/index.ts",
    "security:test-auth": "node --env-file=.env --import tsx scripts/broken-auth-assessment.ts",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --passWithNoTests",
    "build": "tsc -p tsconfig.build.json",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:validate": "prisma validate --schema prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@azure/communication-email": "^1.1.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.2.0",
    "@sigfarm/auth-contracts": "file:../../packages/auth-contracts",
    "better-auth": "^1.4.0",
    "fastify": "^5.6.1",
    "jose": "^6.1.3",
    "pg": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0",
    "tsx": "^4.20.6"
  }
}
