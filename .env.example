# Auth API
PORT=3000
NODE_ENV=development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sigfarm_auth_dev
SHADOW_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sigfarm_auth_shadow

# Better Auth (a implementar no proximo ciclo)
BETTER_AUTH_SECRET=replace-me-with-at-least-24-chars
BETTER_AUTH_BASE_URL=http://localhost:3000
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173

# Entra provider (a implementar no proximo ciclo)
ENTRA_CLIENT_ID=replace-me
ENTRA_CLIENT_SECRET=replace-me
ENTRA_TENANT_ID=replace-me

# Google provider
GOOGLE_CLIENT_ID=replace-me
GOOGLE_CLIENT_SECRET=replace-me

# Auth token service
AUTH_ACCESS_TOKEN_TTL_SECONDS=900
AUTH_REFRESH_TOKEN_TTL_SECONDS=2592000
AUTH_JWT_ISSUER=http://localhost:3000
AUTH_JWT_AUDIENCE=sigfarm-apps
AUTH_JWT_KID=sigfarm-auth-k1
AUTH_JWT_PRIVATE_KEY_PEM=
AUTH_JWT_PUBLIC_KEY_PEM=

# Transactional email provider (Azure Communication Services)
EMAIL_PROVIDER=console
ACS_EMAIL_CONNECTION_STRING=
ACS_EMAIL_SENDER=DoNotReply@mail.sigfarmintelligence.com
ACS_EMAIL_REPLY_TO=
AUTH_EMAIL_VERIFY_PAGE_URL=https://auth.sigfarmintelligence.com/verify-email
AUTH_EMAIL_RESET_PAGE_URL=https://auth.sigfarmintelligence.com/reset-password
AUTH_EMAIL_SEND_TIMEOUT_MS=10000
AUTH_EMAIL_RETRY_ATTEMPTS=3
AUTH_EMAIL_RETRY_BASE_DELAY_MS=250
AUTH_RESET_CODE_TTL_SECONDS=600
AUTH_RESEND_COOLDOWN_SECONDS=60

# Auth rate limits
AUTH_RATE_LIMIT_WINDOW_SECONDS=60
AUTH_RATE_LIMIT_MAX_REQUESTS=60
AUTH_RATE_LIMIT_LOGIN_MAX_REQUESTS=10
AUTH_REQUIRE_EMAIL_VERIFICATION=true

# Auth Web (shared login UI)
VITE_AUTH_API_BASE_URL=http://localhost:3000
VITE_AUTH_WEB_BASE_URL=http://localhost:5173
VITE_AUTH_ALLOWED_RETURN_ORIGINS=http://localhost:5173,https://bi.sigfarmintelligence.com,https://testbi.sigfarmintelligence.com,https://landwatch.sigfarmintelligence.com,https://testlandwatch.sigfarmintelligence.com
VITE_AUTH_DEFAULT_RETURN_TO=http://localhost:5173/my-account
